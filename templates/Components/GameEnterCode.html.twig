<div {{ attributes }} class="w-[300px]">

    <div class="p-2 m-2 bg-white flex gap-2 justify-center bg-gradient-to-b from-zinc-800 to-zinc-600">
        {% for char in this.getCode %}
            <div class="w-[20px] text-3xl text-green-400">{{ char }}</div>
        {% endfor %}
    </div>

    <div class="grid grid-cols-3 gap-2 w-[151px] mx-auto pt-[20px]">
    {% for btn in ["1", "2", "3", "4", "5", "6", "7", "8", "9", "C", "0", "OK"] %}
        <button
                class="h-[45px] w-[45px] bg-zinc-200 hover:bg-zinc-300 text-2xl font-normal rounded font-bold shadow-custom active:shadow-customClick"
                data-action="live#action"
                data-live-action-param="keypadClick"

                data-live-code-param="{{ code }}"
                data-live-number-param="{{ btn }}"

        >{{ btn }}</button>
    {% endfor %}
    </div>

</div>